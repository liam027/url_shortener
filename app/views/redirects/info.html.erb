<h1>URL Information</h1>

<h2>Redirect Details</h2>

<div>
<span>Short URL: </span>
<br>

<span><%= @short_url %></span>
</div>
<br>

<div>
<span>Original URL:</span>
<br>

<span><%= @redirect.full_url %></span>
</div>

<h2>Visitor Details</h2>
<% @redirect.visits.each do |visit| %>
  <div>
    <span>ID: </span><span><%= visit.id %></span>
    <span>IP Address: </span><span><%= visit.ip_address %></span>
    <span>Count: </span><span><%= visit.count %></span>
  </div>
<% end %>